<Page x:Class="Real_estate_agency.Pages.Vid_dogovor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Real_estate_agency.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="860" d:DesignWidth="1500"
      Title="Договоры">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Button Style="{StaticResource Button_Pod_menu}" Click="prod_click" Height="700">
                    <StackPanel>
                        <Image Source="/Images/prod.png" Style="{StaticResource Image_Pod}"/>
                        <TextBlock HorizontalAlignment="Center" Text="Продажи"/>
                    </StackPanel>
                </Button>
                <Button Style="{StaticResource Button_Pod_menu}" Height="700" Click="arenda_click">
                    <StackPanel>
                        <Image Source="/Images/rent.png" Style="{StaticResource Image_Pod}"/>
                        <TextBlock HorizontalAlignment="Center" Text="Аренда"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
